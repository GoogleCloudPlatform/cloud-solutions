# Core Super-Linter Config
CREATE_LOG_FILE=true
IGNORE_GITIGNORED_FILES=true
LINTER_RULES_PATH=config/lint
LOG_LEVEL=INFO

## Excludes
# - gradlew scripts because Gradle generates them, and they contain a few issues
# - mvnw scripts because Maven generates them, and they contain a few issues
# - .nb.py files because they are autogenerated.
# - Bootstrap framework CSS and JS files because they are not maintained by us
# - codmod-full-report-dotnet-mod.html because it's automatically generated
# - jquery files because they are not maintained by us
# - Modernizr files because they are not maintained by us
# - Respond files because they are not maintained by us
# - PagedList because they are not maintained by us
FILTER_REGEX_EXCLUDE=.*/gradlew|.*/mvnw|.*\.nb\.py|.*/bootstrap\.css|.*/bootstrap.min.css|.*/bootstrap\.js|.*/bootstrap.min.js|.*/codmod-full-report-dotnet-mod.html|.*/jquery(-.*)?\.js|.*/jquery\.validate.*\.js|.*/modernizr.*\.js|.*/respond.*\.js|.*/PagedList\.css

# Only validate changed files
VALIDATE_ALL_CODEBASE=false

## Language Configs
VALIDATE_CSS=true
VALIDATE_EDITORCONFIG=true
VALIDATE_ENV=true
VALIDATE_GIT_MERGE_CONFLICT_MARKERS=true
VALIDATE_JSON=true
VALIDATE_JSONC=true
VALIDATE_KOTLIN=true
VALIDATE_POWERSHELL=true
VALIDATE_RENOVATE=true
VALIDATE_RUBY=true
VALIDATE_XML=true
VALIDATE_YAML=true

## Commitlint
ENABLE_COMMITLINT_STRICT_MODE=false
ENFORCE_COMMITLINT_CONFIGURATION_CHECK=true
VALIDATE_GIT_COMMITLINT=true

## Gitleaks
GITLEAKS_CONFIG_FILE=gitleaks.toml
GITLEAKS_LOG_LEVEL=warn
VALIDATE_GITLEAKS=true

## Dockerfile
DOCKERFILE_HADOLINT_FILE_NAME=.hadolint.yaml
VALIDATE_DOCKERFILE_HADOLINT=true

## Editorconfig
# EDITORCONFIG_FILE_NAME configures the linter.
# However, the linter will enforce the rules found on the .editorconfig file
# found on the path of the file, up to the root of the repository.
EDITORCONFIG_FILE_NAME=.editorconfig-checker.json

## Go
# Config file for golangci-lint is .golangci.yml
VALIDATE_GO_MODULES=true

## Java
# Super-linter >= v6 uses the configuration files that checkstyle embeds
JAVA_FILE_NAME=google_checks.xml
VALIDATE_GOOGLE_JAVA_FORMAT=true
VALIDATE_JAVA=true

## JavaScript
JAVASCRIPT_ES_CONFIG_FILE=eslint.config.mjs
VALIDATE_JAVASCRIPT_ES=true

## Markdown
MARKDOWN_CONFIG_FILE=.markdown-lint.yaml
VALIDATE_MARKDOWN=true

## Proto
PROTOBUF_CONFIG_FILE=.protolint.yaml
VALIDATE_PROTOBUF=true

## Python
### This config comes from go/gpylint-on-pylint
PYTHON_BLACK_CONFIG_FILE=.python-black.toml
PYTHON_ISORT_CONFIG_FILE=python-isort.toml
PYTHON_PYLINT_CONFIG_FILE=python-lint.rc
VALIDATE_PYTHON_ISORT=true
VALIDATE_PYTHON_PYLINT=true

## Shell
VALIDATE_BASH=true
VALIDATE_SHELL_SHFMT=true

## Terraform
VALIDATE_TERRAFORM_FMT=true

## Typescript
TYPESCRIPT_ES_CONFIG_FILE=eslint.config.mjs
VALIDATE_TYPESCRIPT_ES=true
VALIDATE_TYPESCRIPT_PRETTIER=true

## Jupyter Notebooks use same config files for PYTHON_xxx tools.
VALIDATE_JUPYTER_NBQA_ISORT=true
