{
  "Policy": "{\"Version\":\"2012-10-17\",\"Statement\":[{\"Sid\":\"PublicReadForWebsite\",\"Effect\":\"Allow\",\"Principal\":\"*\",\"Action\":\"s3:GetObject\",\"Resource\":\"arn:aws:s3:::marketing-bucket/*\"},{\"Sid\":\"DenySecretAccess\",\"Effect\":\"Deny\",\"Principal\":\"*\",\"Action\":\"s3:GetObject\",\"Resource\":\"arn:aws:s3:::marketing-bucket/secret/*\"},{\"Sid\":\"AllowDigitalMarketingReadWrite\",\"Effect\":\"Allow\",\"Principal\":{\"AWS\":[\"arn:aws:iam::123456789012:role/digital-marketing\"]},\"Action\":[\"s3:GetObject\",\"s3:PutObject\",\"s3:DeleteObject\"],\"Resource\":\"arn:aws:s3:::marketing-bucket/digital/*\"},{\"Sid\":\"AllowSocialMediaReadWrite\",\"Effect\":\"Allow\",\"Principal\":{\"AWS\":[\"arn:aws:iam::123456789012:role/social-media\"]},\"Action\":[\"s3:GetObject\",\"s3:PutObject\",\"s3:DeleteObject\"],\"Resource\":\"arn:aws:s3:::marketing-bucket/social/*\"},{\"Sid\":\"AllowProductMarketingRead\",\"Effect\":\"Allow\",\"Principal\":{\"AWS\":[\"arn:aws:iam::123456789012:role/product-marketing\"]},\"Action\":\"s3:GetObject\",\"Resource\":\"arn:aws:s3:::marketing-bucket/product/*\"},{\"Sid\":\"AllowCreativeServicesAccess\",\"Effect\":\"Allow\",\"Principal\":{\"AWS\":[\"arn:aws:iam::123456789012:role/creative-services\"]},\"Action\":[\"s3:GetObject\",\"s3:PutObject\"],\"Resource\":\"arn:aws:s3:::marketing-bucket/creative-assets/*\"},{\"Sid\":\"AllowMarketingAnalyticsRead\",\"Effect\":\"Allow\",\"Principal\":{\"AWS\":[\"arn:aws:iam::123456789012:role/marketing-analytics\"]},\"Action\":\"s3:GetObject\",\"Resource\":\"arn:aws:s3:::marketing-bucket/analytics/*\"}]}"
