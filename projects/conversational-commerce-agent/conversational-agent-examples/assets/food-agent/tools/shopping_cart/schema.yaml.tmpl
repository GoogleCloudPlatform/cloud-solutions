openapi: 3.0.0
info:
  title: apparel-search-cloud-function
  description: Get best-matched products based on a search query
  version: 1.0.0
servers:
  - url: _CF_URL_PLACEHOLDER_
paths:
  /shopping_cart:
    post:
      summary: Show shopping cart to the customer
      operationId: shopping_cart
      requestBody:
        description: Show shopping cart to the customer
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/ShoppingCartItems'
      responses:
        '200':
          description: >-
            Shopping cart items
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ProductResp'
components:
  schemas:
    ShoppingCartItems:
      type: object
      properties:
          items:
            type: array
            items:
              type: object
              properties:
                id:
                  type: string
                price:
                  type: number
                title:
                  type: string
                image:
                  type: string
                quantity:
                  type: number
    ProductResp:
      type: object
      properties:
        payload:
          type: object
          properties:
            richContent:
              type: array
              items:
                type: array
                items:
                  type: object
                  properties:
                    type:
                      type: string
                    name:
                      type: string
                    payload:
                      type: object
                      properties:
                        items:
                          type: array
                          items:
                            type: object
                            properties:
                              product:
                                type: object
                                properties:
                                  id:
                                    type: string
                                  title:
                                    type: string
                                  name:
                                    type: string
                                  priceInfo:
                                    type: object
                                    properties:
                                      price:
                                        type: number
                                  images:
                                    type: array
                                    items:
                                      type: object
                                      properties:
                                        uri:
                                          type: string
                                        height:
                                          type: number
                                        width:
                                          type: number
                                  description:
                                    type: string
