apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
resources:
- ../../base
namespace: adk-agent-demo
images:
- name: adk-repo/adk-agent
  newName: ${region}-docker.pkg.dev/${project_id}/adk-repo/adk-agent
  newTag: latest
configMapGenerator:
- name: adk-agent-config
  literals:
  - project_id=${project_id}
  - location=${region}
  - tools_url=http://toolbox-service.mcp-toolbox-demo.svc.cluster.local:5000
  - sentiment_model_api_base_url=http://gemma-vllm-service.gemma-gke-demo.svc.cluster.local/v1
secretGenerator:
- name: finnhub-api-key
  literals:
  - key=${finnhub_api_key}
